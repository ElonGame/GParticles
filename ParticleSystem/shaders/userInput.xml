				</atomics>
				<buffers>
					<buffer name="exp_lifetimes" />
					<buffer name="exp_positions" />
					<buffer name="exp_velocities" />
					<buffer name="exp_colors" />
				</buffers>
				<uniforms>
				</uniforms>
			</resources>

			<files>
				<file path="shaders/fireworks/expUpdater.comp" />
			</files>
		</updater>

		<renderer>
			<resources>
				<atomics>
				</atomics>
				<buffers>
					<buffer name="exp_lifetimes" />
					<buffer name="exp_positions"/>
					<buffer name="exp_colors" />
				</buffers>
				<uniforms>
				</uniforms>
			</resources>

			<vertfiles>
				<file path="shaders/fireworks/expVertex.vert" />

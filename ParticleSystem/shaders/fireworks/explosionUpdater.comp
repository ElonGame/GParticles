void main()
{
	uint gid = gl_GlobalInvocationID.x;

	if (explosion_lifetimes[gid] <= 0)
		return;

	explosion_lifetimes[gid] -= 0.001;

	if (explosion_lifetimes[gid] <= 0)
	{
		atomicCounterDecrement(explosion_aliveParticles);
		return;
	}

	explosion_positions[gid].xyz += explosion_velocities[gid].xyz;
	explosion_positions[gid].a = 1;
}
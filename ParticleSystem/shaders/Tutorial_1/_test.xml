<project>
	
	<resources prefab="prefabs/resources.xml"/>

	<psystem name="rocket">
		<position x=0 y=0 z=-5 />
		<rotation x=1 y=0 z=0 angle=0/>
		<scale x=1 y=1 z=1 />
		<lifetime value=3 />
		<numWorkGroups value=1 />

		<override type="uniform" name="rocket_toCreate" value=500/>
		<override type="uniform" name="rocket_maxParticles" value=500/>



		<emitter>
			<override type="atomic" name="rocket_emissionAttempts" value=0/>

			<file path="reserved/utilities.glsl" />
			<file path="reserved/emission.glsl" />
			<file path="shaders/Tutorial_1/rocketEmitter.comp" />
		</emitter>


		<updater>
			<file path="reserved/utilities.glsl" />
			<file path="reserved/emission.glsl" />
			<file path="shaders/Tutorial_1/rocketUpdater.comp" />
		</updater>


		<renderer prefab="prefabs/simplePointRenderer.xml">
			<!--rendertype type="model" path="assets/models/agent/eagle.3ds"/>
			<vertfiles>
				<file path="shaders/Tutorial_1/model.vert" />
			</vertfiles>
			<fragfiles>
				<file path="shaders/Tutorial_1/model.frag" />
			</fragfiles-->
			<rendertype type="billboard" path="snow.png" />
			
			<vertfile path="shaders/Tutorial_1/rocketVertex.vert" />
			<geomfile path="reserved/utilities.glsl" />
			<geomfile path="shaders/Tutorial_1/rocketGeom.geom"/>
			<fragfile path="shaders/Tutorial_1/rocketFrag.frag" />
		</renderer>


	</psystem>
</project>
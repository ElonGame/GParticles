<project>
	
	<resources prefab="prefabs/resources.xml"/>

	<psystem name="rocket">
		<position x=0 y=0 z=-5 />
		<rotation x=1 y=0 z=0 angle=0/>
		<scale x=1 y=1 z=1 />
		<lifetime value=3 />
		<numWorkGroups value=1 />

		<override type="uniform" name="rocket_toCreate" value=1/>
		<override type="uniform" name="rocket_maxParticles" value=500/>



		<emitter iterationStep=300>
			<override type="atomic" name="rocket_emissionAttempts" value=0/>

			<file path="reserved/utilities.glsl" />
			<file path="reserved/emission.glsl" />
			<file path="shaders/rain_and_puddles/rocketEmitter.comp" />
		</emitter>


		<updater iterationStep=0>
			<file path="reserved/utilities.glsl" />
			<file path="reserved/emission.glsl" />
			<file path="shaders/rain_and_puddles/rocketUpdater.comp" />
		</updater>


		<renderer prefab="prefabs/simplePointRenderer.xml">
			<!--rendertype type="model" path="assets/models/agent/eagle.3ds"/>
			<vertfiles>
				<file path="shaders/rain_and_puddles/model.vert" />
			</vertfiles>
			<fragfiles>
				<file path="shaders/rain_and_puddles/model.frag" />
			</fragfiles-->
			<rendertype type="billboard" path="snow.png" />
			
			<vertfile path="shaders/rain_and_puddles/rocketVertex.vert" />
			<geomfile path="reserved/utilities.glsl" />
			<geomfile path="reserved/billboard.glsl" />
			<geomfile path="shaders/rain_and_puddles/rocketGeom.geom"/>
			<fragfile path="shaders/rain_and_puddles/rocketFrag.frag" />
		</renderer>


	</psystem>
</project>